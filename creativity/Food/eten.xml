<Meals>
    <Breakfast>
        <Egg>
            <Recipe>
                <Name>Spinach Feta Scramble</Name>
                <Ingredients>
                    <Ingredient>2 eggs</Ingredient>
                    <Ingredient>1/2 cup spinach</Ingredient>
                    <Ingredient>30g feta cheese</Ingredient>
                    <Ingredient>1 tsp olive oil</Ingredient>
                    <Ingredient>Salt, pepper</Ingredient>
                </Ingredients>
                <Steps>
                    <Step>Heat oil, wilt spinach.</Step>
                    <Step>Add eggs and feta, scramble gently, season.</Step>
                </Steps>
                <PrepTime>4 min</PrepTime>
                <CookTime>5 min</CookTime>
                <Servings>1</Servings>
                <Tags>
                    <Tag>vegetarian</Tag>
                    <Tag>high-protein</Tag>
                </Tags>
                <Calories>270</Calories>
            </Recipe>
            <Recipe>
                <Name>Egg Muffins</Name>
                <Ingredients>
                    <Ingredient>3 eggs</Ingredient>
                    <Ingredient>1/4 cup diced tomato</Ingredient>
                    <Ingredient>2 tbsp chopped onion</Ingredient>
                    <Ingredient>30g grated cheese</Ingredient>
                    <Ingredient>Salt, pepper</Ingredient>
                </Ingredients>
                <Steps>
                    <Step>Beat eggs, mix in veggies and cheese.</Step>
                    <Step>Pour in muffin tray, bake 15 min at 180°C.</Step>
                </Steps>
                <PrepTime>6 min</PrepTime>
                <CookTime>15 min</CookTime>
                <Servings>2</Servings>
                <Tags>
                    <Tag>meal prep</Tag>
                    <Tag>vegetarian</Tag>
                </Tags>
                <Calories>320</Calories>
            </Recipe>
